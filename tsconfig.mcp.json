{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist/mcp",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/mcp/**/*", "src/shared/**/*"]
}
